# OpenAI Configuration
REQCHECK_OPENAI_API_KEY=your-api-key-here
REQCHECK_OPENAI_MODEL=gpt-4o-mini

# Analysis Settings
REQCHECK_ENABLE_LLM_ANALYSIS=true
REQCHECK_ENABLE_RULE_BASED_ANALYSIS=true
REQCHECK_MIN_SEVERITY=suggestion

# API Server
REQCHECK_API_HOST=0.0.0.0
REQCHECK_API_PORT=8000

# Rate Limiting
REQCHECK_RATE_LIMIT_ENABLED=true
REQCHECK_RATE_LIMIT_DEFAULT=60/minute
REQCHECK_RATE_LIMIT_ANALYZE=30/minute
REQCHECK_RATE_LIMIT_BATCH=10/minute

# CORS Configuration
# Use '*' for all origins or comma-separated list: 'https://app.example.com,https://admin.example.com'
REQCHECK_CORS_ALLOWED_ORIGINS=*
REQCHECK_CORS_ALLOW_CREDENTIALS=true
REQCHECK_CORS_ALLOW_METHODS=*
REQCHECK_CORS_ALLOW_HEADERS=*

# Authentication (disabled by default for backward compatibility)
REQCHECK_AUTH_ENABLED=false
# Comma-separated list of valid API keys (generate secure keys for production)
REQCHECK_API_KEYS=
REQCHECK_AUTH_HEADER_NAME=X-API-Key

# Request Size Limits
REQCHECK_MAX_TITLE_LENGTH=500
REQCHECK_MAX_DESCRIPTION_LENGTH=10000
REQCHECK_MAX_ACCEPTANCE_CRITERIA_COUNT=50
REQCHECK_MAX_ACCEPTANCE_CRITERIA_LENGTH=2000
REQCHECK_MAX_METADATA_SIZE_BYTES=10240
